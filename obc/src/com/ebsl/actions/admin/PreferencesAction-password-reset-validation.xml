<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>

	<field name="model.password">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>Old Password is required</message>
		</field-validator>

	</field>

	<field name="model.newPassword">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>New Password is required</message>
		</field-validator>
	</field>

	<field name="model.newPassword2">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>Confirm your new password</message>
		</field-validator>
	</field>

	<validator type="expression">
		<param name="expression">model.newPassword2 eq model.newPassword</param>
		<message>Confirm your new password matches</message>
	</validator>


</validators>